<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Shopping Cart</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    .cart-header { display: flex; align-items: center; gap: 1rem; margin-bottom: 2rem; }
    .cart-header i { font-size: 2.2rem; color: #3498db; }
    .cart-main { max-width: 900px; margin: 0 auto; background: #fff; border-radius: 18px; box-shadow: 0 4px 32px rgba(44,62,80,0.10); padding: 2.5rem 2rem; }
    .cart-items { margin-bottom: 2.5rem; }
    .cart-item { display: flex; gap: 1.5rem; align-items: center; background: #f6f8fa; border-radius: 12px; box-shadow: 0 2px 10px rgba(44,62,80,0.07); padding: 1.2rem; margin-bottom: 1.2rem; }
    .cart-item img { width: 100px; height: 100px; object-fit: cover; border-radius: 8px; }
    .item-details { flex: 1; }
    .item-details h3 { margin-bottom: 0.3rem; }
    .item-details p { margin-bottom: 0.2rem; }
    .item-total { font-weight: bold; color: #27ae60; font-size: 1.1rem; }
    .cart-actions { display: flex; gap: 0.7rem; margin-top: 0.5rem; }
    .remove-btn { background: #e74c3c; color: #fff; border: none; border-radius: 6px; padding: 0.5rem 1.2rem; font-size: 1rem; cursor: pointer; transition: background 0.2s; }
    .remove-btn:hover { background: #c0392b; }
    .cart-summary { background: #f8f9fa; border-radius: 12px; box-shadow: 0 2px 10px rgba(44,62,80,0.07); padding: 2rem; text-align: center; margin-top: 2rem; }
    .cart-summary h3 { color: #3498db; margin-bottom: 1.2rem; }
    .checkout-btn { background: linear-gradient(90deg, #27ae60 0%, #2ecc71 100%); color: #fff; padding: 1rem 2.5rem; border: none; border-radius: 8px; font-size: 1.2rem; font-weight: 700; box-shadow: 0 2px 16px rgba(39,174,96,0.18); cursor: pointer; margin-top: 1.5rem; transition: background 0.3s, transform 0.2s; }
    .checkout-btn:hover { background: linear-gradient(90deg, #2ecc71 0%, #27ae60 100%); transform: scale(1.04); }
    
    /* Enhanced Empty Cart Styles */
    .empty-cart-container {
      text-align: center;
      padding: 3rem 2rem;
      background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
      border-radius: 20px;
      margin: 2rem 0;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
      border: 1px solid rgba(255, 255, 255, 0.3);
    }

    .empty-cart-icon {
      font-size: 5rem;
      color: #bdc3c7;
      margin-bottom: 1.5rem;
      animation: cartBounce 2s ease-in-out infinite;
    }

    .empty-cart-title {
      font-size: 2.2rem;
      font-weight: 700;
      color: #2c3e50;
      margin-bottom: 1rem;
      background: linear-gradient(45deg, #3498db, #6dd5ed);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .empty-cart-description {
      font-size: 1.1rem;
      color: #7f8c8d;
      margin-bottom: 2.5rem;
      line-height: 1.6;
      max-width: 500px;
      margin-left: auto;
      margin-right: auto;
    }

    /* Suggested Categories */
    .suggested-categories {
      margin-top: 2rem;
    }

    .suggestions-title {
      font-size: 1.3rem;
      font-weight: 600;
      color: #34495e;
      margin-bottom: 1.5rem;
    }

    .category-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
      gap: 1.5rem;
      max-width: 600px;
      margin: 0 auto;
    }

    .category-card {
      background: rgba(255, 255, 255, 0.9);
      border-radius: 15px;
      padding: 1.5rem 1rem;
      text-align: center;
      transition: all 0.3s ease;
      border: 1px solid rgba(0, 0, 0, 0.05);
      cursor: pointer;
    }

    .category-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
      background: rgba(255, 255, 255, 1);
    }

    .category-icon {
      font-size: 2.5rem;
      margin-bottom: 0.8rem;
      color: #3498db;
      transition: transform 0.3s ease;
    }

    .category-card:hover .category-icon {
      transform: scale(1.1);
    }

    .category-name {
      font-size: 0.95rem;
      font-weight: 600;
      color: #2c3e50;
    }

    /* Action Buttons */
    .cart-action-buttons {
      display: flex;
      justify-content: center;
      gap: 1.5rem;
      margin-top: 2rem;
      flex-wrap: wrap;
    }

    .cart-action-btn {
      background: linear-gradient(45deg, #3498db, #6dd5ed);
      color: white;
      padding: 1rem 2rem;
      border-radius: 25px;
      text-decoration: none;
      font-weight: 600;
      font-size: 1rem;
      transition: all 0.3s ease;
      box-shadow: 0 4px 15px rgba(52, 152, 219, 0.3);
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .cart-action-btn:hover {
      transform: translateY(-3px);
      box-shadow: 0 8px 25px rgba(52, 152, 219, 0.4);
      color: white;
    }

    .cart-action-btn.secondary {
      background: linear-gradient(45deg, #27ae60, #2ecc71);
      box-shadow: 0 4px 15px rgba(39, 174, 96, 0.3);
    }

    .cart-action-btn.secondary:hover {
      box-shadow: 0 8px 25px rgba(39, 174, 96, 0.4);
    }

    /* Animations */
    @keyframes cartBounce {
      0%, 20%, 50%, 80%, 100% {
        transform: translateY(0);
      }
      40% {
        transform: translateY(-15px);
      }
      60% {
        transform: translateY(-7px);
      }
    }

    @media (max-width: 700px) {
      .cart-main { padding: 1rem 0.2rem; }
      .cart-item { flex-direction: column; align-items: flex-start; }
      .cart-item img { margin-bottom: 1rem; }
      .cart-summary { padding: 1rem; }
      
      .empty-cart-container {
        padding: 2rem 1rem;
      }
      
      .empty-cart-title {
        font-size: 1.8rem;
      }
      
      .category-grid {
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem;
      }
      
      .cart-action-buttons {
        flex-direction: column;
        align-items: center;
      }
    }
  </style>
</head>
<body>
  <div class="cart-main">
    <div class="cart-header">
      <i class="fa fa-shopping-cart"></i>
      <h1>Shopping Cart</h1>
    </div>
    <% if (typeof error !== 'undefined' && error) { %>
      <div class="error"><%= error %></div>
    <% } %>
    <% if (cartItems && cartItems.length > 0) { %>
      <div class="cart-items">
        <% cartItems.forEach(item => { %>
          <div class="cart-item" data-price="<%= item.productId.price %>">
            <% if (item.productId.imageUrl) { %>
              <img src="<%= item.productId.imageUrl %>" alt="<%= item.productId.name %>">
            <% } %>
            <div class="item-details">
              <h3><%= item.productId.name %></h3>
              <p class="price">₹<%= item.productId.price %></p>
              <form action="/cart/<%= item._id %>?_method=PUT" method="POST" style="display: inline;">
                <label for="quantity-<%= item._id %>">Quantity:</label>
                <input type="number" id="quantity-<%= item._id %>" name="quantity" value="<%= item.quantity %>" min="1" style="width: 60px;">
                <button type="submit" class="btn" style="background:#3498db;color:#fff;padding:0.4rem 1rem;border-radius:6px;">Update</button>
              </form>
              <form action="/cart/<%= item._id %>?_method=DELETE" method="POST" style="display: inline;">
                <button type="submit" class="remove-btn"><i class="fa fa-trash"></i> Remove</button>
              </form>
              <div class="cart-actions">
                <span class="item-total">Total: ₹<span><%= (item.productId.price * item.quantity).toFixed(2) %></span></span>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
      <div class="cart-summary">
        <h3><i class="fa fa-receipt"></i> Cart Total: ₹<span class="cart-total-value"><%= total.toFixed(2) %></span></h3>
        <form action="/checkout" method="POST">
          <button type="submit" class="checkout-btn"><i class="fa fa-credit-card"></i> Proceed to Checkout</button>
        </form>
      </div>
    <% } else { %>
      <!-- Enhanced Empty Cart State -->
      <div class="empty-cart-container">
        <div class="empty-cart-icon">
          <i class="fa fa-shopping-cart"></i>
        </div>
        <h2 class="empty-cart-title">Your Cart is Empty</h2>
        <p class="empty-cart-description">Looks like you haven't added any items to your cart yet. Start shopping to discover amazing products!</p>
        
        <!-- Suggested Categories -->
        <div class="suggested-categories">
          <h3 class="suggestions-title">Popular Categories</h3>
          <div class="category-grid">
            <div class="category-card">
              <div class="category-icon">
                <i class="fa fa-mobile-alt"></i>
              </div>
              <span class="category-name">Electronics</span>
            </div>
            <div class="category-card">
              <div class="category-icon">
                <i class="fa fa-tshirt"></i>
              </div>
              <span class="category-name">Fashion</span>
            </div>
            <div class="category-card">
              <div class="category-icon">
                <i class="fa fa-home"></i>
              </div>
              <span class="category-name">Home & Living</span>
            </div>
            <div class="category-card">
              <div class="category-icon">
                <i class="fa fa-gamepad"></i>
              </div>
              <span class="category-name">Gaming</span>
            </div>
          </div>
        </div>
      </div>
    <% } %>
    
    <!-- Action Buttons -->
    <div class="cart-action-buttons">
      <a href="/products" class="cart-action-btn primary">
        <i class="fa fa-shopping-bag"></i> Continue Shopping
      </a>
      <a href="/" class="cart-action-btn secondary">
        <i class="fa fa-home"></i> Back to Home
      </a>
    </div>
  </div>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      function updateTotals() {
        let cartTotal = 0;
        document.querySelectorAll('.cart-item').forEach(function(item) {
          const price = parseFloat(item.getAttribute('data-price'));
          const qtyInput = item.querySelector('input[name="quantity"]');
          const quantity = parseInt(qtyInput.value);
          const itemTotal = price * quantity;
          item.querySelector('.item-total span').textContent = itemTotal.toFixed(2);
          cartTotal += itemTotal;
        });
        document.querySelector('.cart-summary .cart-total-value').textContent = cartTotal.toFixed(2);
      }
      document.querySelectorAll('input[name="quantity"]').forEach(function(input) {
        input.addEventListener('input', updateTotals);
      });
    });
  </script>
</body>
</html> 